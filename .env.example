# Data Adapter Selection
# Note: Data adapter is now configured in the database via app_config table
# This is only used for local development override
VITE_DATA_ADAPTER=mock

# API Configuration
VITE_API_URL=https://api.localhost
VITE_BOT_USERNAME=your_bot_username

# Telegram Bot (Server-side only)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Database Configuration

# PostgreSQL (for postgres profile)
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://user:pass@host/db

# SQLite (for sqlite profile)
SQLITE_DB_PATH=/data/app.db

# MinIO S3 Storage (for SQLite backups)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
